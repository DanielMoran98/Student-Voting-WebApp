{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}
{% block stylesheets %}
    <style>@import "css/login.css";</style>
{% endblock %}
{% block body %}
<form method="post">


    <div class="container" style="margin-top: 50px;">
        <div class="row">
            <div class="col-sm-4">
            </div>
            <div class="col-sm-4 main-content" style="margin-top:100px;">
                <h2>Login</h2>
                <label for="inputUsername" class="sr-only">Username</label>
                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" placeholder="Username" required autofocus>
                <label for="inputPassword" class="sr-only">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}

                <button class="btn btn-lg btn-primary" type="submit" style="width:100%; background-color: #40798c;">
                    Sign in
                </button>
                {% if error %}
                    <div style="margin-top:25px;" class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

            </div>
            <div class="col-sm-4">
            </div>
        </div>
    </div>
</form>




{% endblock %}
